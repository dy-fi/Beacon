<div class="card">
    <div class="card-block">
        <h2 class="card-title">{{this.name}}</h2><br>
        <p class="card-text">
            {{this.description}}
            {{this.date}}
            {{this.location}}
        </p>
            <form method="POST" action="/charities/donations/{{this._id}}?_method=DELETE">
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Save Review</button>
                </div>
                <div class="form-group">
                    <button class="btn btn-link" type="submit">Delete</button>
                </div>
            </form>
        </p>
    </div>
</div>
